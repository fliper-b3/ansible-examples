{
  "description": "Pipeline for parsing the Nginx error logs",
  "processors": [{
    "grok": {
      "field": "message",
      "patterns": [
        "%{DATA:nginx.error.time} \\[%{DATA:nginx.error.level}\\] %{NUMBER:nginx.error.pid}#%{NUMBER:nginx.error.tid}: (\\*%{NUMBER:nginx.error.connection_id} )?%{DATA:nginx.error.message}, %{GREEDYDATA:nginx.error.kv}"
      ],
      "ignore_missing": true
    }
  },{
    "remove":{
      "field": "message"
    }
  }, {
    "rename": {
      "field": "@timestamp",
      "target_field": "read_timestamp"
    }
  }, {
    "date": {
      "field": "nginx.error.time",
      "target_field": "@timestamp",
      "formats": ["YYYY/MM/dd H:m:s"]
    }
  }, {
    "remove": {
      "field": "nginx.error.time"
    }
  }, {
    "kv": {
      "field": "nginx.error.kv",
      "field_split": ", ",
      "value_split": ": ",
      "target_field": "nginx.error",
      "ignore_missing": true
    }
  }, {
    "remove": {
      "field": "nginx.error.kv"
    }
  }, {
    "grok": {
      "field": "nginx.error.request",
      "patterns":[
        "\"%{WORD:nginx.error.method} %{DATA:nginx.error.url} HTTP/%{NUMBER:nginx.error.http_version}\""
      ],
      "ignore_missing": true
    }
  }, {
    "remove": {
      "field": "nginx.error.request"
    }
  }, {
    "geoip": {
      "field": "nginx.error.client",
      "target_field": "nginx.error.geoip",
      "properties": [
        "continent_name",
        "country_name", 
        "region_name",
        "city_name", 
        "location"
      ], 
      "ignore_missing": true
    }
  }],
  "on_failure" : [{
    "set" : {
      "field" : "error",
      "value" : "{{ _ingest.on_failure_message }}"
    }
  }]
}
